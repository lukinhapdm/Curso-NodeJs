{{#each erros}}
	<div class="alert alert-danger">
		{{texto}}
	</div>
{{else}}
{{/each}}

<div class="card">
	<div class="card-body">
		<h2>Criar Conta</h2>
		<hr>
		<form action="" method="POST">
			<label for="nome">Nome: </label>
			<input type="text" id="nome" name="nome" placeholder="Nome" class="form-control" required>
			<br>
			<label for="email">Email: </label>
			<input type="email" id="email" name="email" placeholder="Email" class="form-control" required>
			<br>
			<label for="senha">Senha: </label>
			<input type="password" id="senha" name="senha" placeholder="Senha" class="form-control" required>
			<br>
			<label for="senha2">Repetir Senha: </label>
			<input type="password" id="senha2" name="senha2" placeholder="Senha" class="form-control" required>
			<br>
			<button class="btn btn-success" type="submit">Criar Conta</button>
		</form>
	</div>
</div>