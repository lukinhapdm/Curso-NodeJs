<h2>Lista de Categorias:</h2>
<hr>
<a href="categorias/add">
	<button class="btn btn-success">Nova Categoria</button>
</a>

{{#each categorias}}
	<div class="card mt-4">
		<div class="card-body">
			<h4>{{nome}}</h4>
			<small>Slug: {{slug}}</small>
			<br>
			<small>Data de criação: {{date}}</small>
			<div class="container text-center mt-2">
				<div class="row justify-content-center">
					<div class="col">
						<a href="/admin/categorias/edit/{{_id}}">
							<button class="btn btn-success">Editar Categoria</button>
						</a>
					</div>
					<div class="col">
						<form action="/admin/categorias/delete" method="POST">
							<input type="hidden" name="id" value="{{_id}}">
							<button type="submit" class="btn btn-danger">Deletar Categoria</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{{else}}
	<h4 class="mt-4">Nenhuma categoria resgistrada!</h4>
{{/each}}