<h2>Lista de Categorias:</h2>
<hr>
<a href="categorias/add">
	<button class="btn btn-success">Nova Categoria</button>
</a>

{{#each categorias}}
	<div class="card mt-4">
		<div class="card-body">
			<h4>{{nome}}</h4>
			<small>Slug: {{slug}}</small>
			<br>
			<samll>Data de criação: {{date}}</small>
		</div>
	</div>
{{else}}

{{/each}}