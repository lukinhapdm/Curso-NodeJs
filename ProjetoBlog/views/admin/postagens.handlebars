<h2>Lista de Postagens:</h2>
<hr>
<a href="postagens/add">
	<button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}
	<div class="card mt-4">
		<div class="card-body">
			<h4>{{titulo}}</h4>
			<p>Descrição: {{descricao}}</p>
			<small>Data de criação: {{date}}</small>
			<br>
			<small>Categoria: {{categoria.nome}}</small>
			<small>Slug: {{slug}}</small>
			<div class="container text-center mt-2">
				<div class="row justify-content-center">
					<div class="col">
						<a href="/admin/postagens/edit/{{_id}}">
							<button class="btn btn-success">Editar Postagem</button>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{{else}}
	<h4 class="mt-4">Nenhuma postagem resgistrada!</h4>
{{/each}}